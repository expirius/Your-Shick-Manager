<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model ="clr-namespace:MFASeeker.Model"
             xmlns:converters="clr-namespace:MFASeeker.Converters"
             xmlns:effects ="clr-namespace:MFASeeker.View.Effects"
             x:Class="MFASeeker.View.Controls.ToiletCard"
             x:DataType="model:Toilet">
    <Frame >
        <Grid>
            <!-- Верхняя картинка карусели -->
            <Grid Background="Black" ZIndex="1" Opacity="0.6"/>
            <Image Source="toilet_undefined.png">
                <Image.Behaviors>
                    <effects:BlurBehavior Radius="10"/>
                </Image.Behaviors>
            </Image>
            <StackLayout Orientation="Vertical">
                <Label Text="Адрес"/>
            <Label Text="Москва, Мыльно-Рыльная д. 22, кв. 15" />

            <Label Text="Создан" />
            <Label Text="23.02.2012" />

            <Label Text="До точки:" />
            <Label Text="43 мин - 232 м" />
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls_buttons="clr-namespace:MFASeeker.View.Controls.Buttons" 
             x:Class="MFASeeker.View.Controls.NewPinPopup">
    <VerticalStackLayout Padding="20">
        <Label Text="Новая метка:" FontSize="Large" />
        
        <Entry x:Name="NameEntry" Placeholder="Название метки" />

        <Entry x:Name="RatingEntry" Placeholder="Рейтинг"/>
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand">
            <controls_buttons:StarSelector />
        </HorizontalStackLayout>
        <Entry x:Name="DescriptionEntry" Placeholder="Описание" />

        <Button Text="Подтвердить"/>
    </VerticalStackLayout>
</ContentView>

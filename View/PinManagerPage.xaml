                        <Border 
                                  Margin="15"
                                HeightRequest="550"
                                  Stroke="Transparent"
                                  StrokeShape="RoundRectangle 35">
                            <controls:ToiletCard />
                        </Border>
                    </DataTemplate>
                </CarouselView.ItemTemplate>

            </CarouselView>

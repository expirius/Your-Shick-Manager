<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MFASeekerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MFASeekerApp.View"
    FlyoutBehavior="Disabled"
    Title="Your Shick">
    <!--FlyoutBehavior="Flyout"-->
    <!-- -->
    <FlyoutItem CurrentItem="{x:Reference MainFlyout}">
        <ShellContent
            Title="Поиск"
            Icon="search_icon.png"
            Route="Карта"
            ContentTemplate="{DataTemplate local:SearchPage}"/>

        <ShellContent
            x:Name="MainFlyout"
            Icon="toilet_bot.png"
            Title="Главная"
            Route="Главная"
            ContentTemplate="{DataTemplate local:MainPage}"/>

        <ShellContent
            Title="Метки"
            Icon="menu_icon.png"
            Route="Метки"
            ContentTemplate="{DataTemplate local:PinManagerPage}"/>
    </FlyoutItem>
</Shell>
